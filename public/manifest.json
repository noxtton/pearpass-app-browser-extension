{
  "manifest_version": 3,
  "name": "PearPass",
  "version": "1.1.0",
  "permissions": [
    "storage",
    "nativeMessaging",
    "clipboardRead",
    "clipboardWrite",
    "offscreen",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }, 
  "description": "Password manager extension for PearPass",
  "web_accessible_resources": [
    {
      "resources": [
        "content-popups.html",
        "inject.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "use_dynamic_url": true
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "inject-shim.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
  