{
  "name": "pearpass-app-browser-extension",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite",
    "build:main": "vite build --config vite.config.main.js",
    "build:content": "vite build --config vite.config.content.js",
    "build:background": "vite build --config vite.config.background.js",
    "build:inject": "vite build --config vite.config.inject.js",
    "build": "npm run lingui:extract && npm run lingui:compile && npm run build:main && npm run build:content && npm run build:background && npm run build:inject",
    "build:watch:main": "vite build --watch --config vite.config.main.js --mode development",
    "build:watch:content": "vite build --watch --config vite.config.content.js --mode development",
    "build:watch:background": "vite build --watch --config vite.config.background.js --mode development",
    "build:watch:inject": "vite build --watch --config vite.config.inject.js --mode development",
    "build:watch": "npm-run-all --parallel build:watch:main build:watch:content build:watch:background build:watch:inject",
    "preview": "vite preview",
    "test": "jest",
    "lint:fix": "eslint --fix ./src",
    "lint": "eslint ./src",
    "prepare": "husky",
    "lingui:extract": "lingui extract",
    "lingui:compile": "lingui compile",
    "update-submodules": "bash scripts/update-submodules.sh"
  },
  "dependencies": {
    "@lingui/core": "5.1.2",
    "@lingui/format-json": "5.1.2",
    "@lingui/react": "5.1.2",
    "@lingui/vite-plugin": "5.3.1",
    "@noble/ciphers": "1.3.0",
    "@noble/curves": "1.9.6",
    "@reduxjs/toolkit": "2.5.0",
    "@tailwindcss/vite": "4.1.4",
    "events": "3.3.0",
    "pear-apps-lib-feedback": "file:packages/pear-apps-lib-feedback",
    "pear-apps-lib-ui-react-hooks": "file:packages/pear-apps-lib-ui-react-hooks",
    "pear-apps-utils-avatar-initials": "file:packages/pear-apps-utils-avatar-initials",
    "pear-apps-utils-date": "file:packages/pear-apps-utils-date",
    "pear-apps-utils-generate-unique-id": "file:packages/pear-apps-utils-generate-unique-id",
    "pear-apps-utils-pattern-search": "file:packages/pear-apps-utils-pattern-search",
    "pear-apps-utils-qr": "file:packages/pear-apps-utils-qr",
    "pear-apps-utils-validator": "file:packages/pear-apps-utils-validator",
    "pearpass-lib-constants": "file:packages/pearpass-lib-constants",
    "pearpass-lib-ui-theme-provider": "file:packages/pearpass-lib-ui-theme-provider",
    "pearpass-lib-vault": "file:packages/pearpass-lib-vault",
    "pearpass-utils-password-check": "file:packages/pearpass-utils-password-check",
    "pearpass-utils-password-generator": "file:packages/pearpass-utils-password-generator",
    "react": "18.3.1",
    "react-dom": "18.3.0",
    "react-redux": "9.1.2",
    "styled-components": "6.1.19",
    "tailwind-merge": "3.3.0",
    "tailwindcss": "4.1.4",
    "tether-dev-docs": "file:packages/tether-dev-docs"
  },
  "devDependencies": {
    "@babel/core": "7.26.10",
    "@babel/preset-env": "7.26.9",
    "@babel/preset-react": "7.26.3",
    "@lingui/babel-plugin-lingui-macro": "5.1.2",
    "@lingui/cli": "5.1.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@vitejs/plugin-react": "4.3.4",
    "babel-jest": "29.7.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "npm-run-all": "4.1.5",
    "pear-interface": "1.0.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "vite": "6.3.1"
